{
  "manifest_version": 2,
  "name": "Songlink",
  "description": "Share track on Songlink",
  "version": "1.2",
  "author": "@starfennec",
  "background": {
    "scripts": ["script.js"],
    "persistent": false
  },
  "content_scripts": [
   {
     "matches": ["https://play.google.com/music/*"],
     "js": ["googlePlayMusic.js"]
   }
 ],
  "browser_action": {},
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": ["activeTab", "clipboardWrite"]
}
