{
  "manifest_version": 2,
  "name": "Songlink",
  "description": "Share music with Songlink. ",
  "version": "1.4.1",
  "author": "@starfennec",
  "homepage_url": "https://chrome.google.com/webstore/detail/songlink/njnlopjiecpncchdmeeknhggbggolalc",
  "background": {
    "scripts": ["script.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.song.link/*",
        "*://itunes.apple.com/*",
        "*://*.itun.es/*",
        "*://*.spotify.com/*",
        "*://*.youtube.com/*",
        "*://*.youtu.be/*",
        "*://*.deezer.com/*",
        "*://*.tidal.com/*",
        "*://*.napster.com/*",
        "*://play.google.com/music/*",
        "*://play.google.com/store/*",
        "*://*.soundcloud.com/*",
        "*://music.amazon.com/*",
        "*://*.amazon.com/*",
        "*://music.yandex.com/*",
        "*://music.yandex.ru/*",
        "*://*.spinrilla.com/mixtapes/*",
        "*://*.spinrilla.com/songs/*",
        "*://*.pandora.com/*"
      ],
      "js": ["messages.js"]
    },
    {
      "matches": ["*://play.google.com/music/*"],
      "js": ["googlePlayMusic.js"]
    }
 ],
  "page_action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": ["activeTab", "clipboardWrite", "storage", "tabs"]
}
